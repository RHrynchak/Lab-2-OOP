<Window x:Class="Lab_2.DriveFilePickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вибір файлу з Google Drive" 
        Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#667eea"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5568d3"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#667eea" CornerRadius="10" Padding="15" Margin="0,0,0,10">
            <TextBlock Text="☁️ Файли на Google Drive" 
                      FontSize="20" 
                      FontWeight="Bold" 
                      Foreground="White"
                      HorizontalAlignment="Center"/>
        </Border>

        <!-- Фільтр -->
        <GroupBox Grid.Row="1" Header="🔍 Фільтр" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Показати тільки:" VerticalAlignment="Center" Margin="5" FontWeight="Bold"/>
                <ComboBox x:Name="FileTypeFilterComboBox" Width="150" SelectionChanged="FileTypeFilter_Changed" SelectedIndex="0">
                    <ComboBoxItem Content="Всі файли"/>
                    <ComboBoxItem Content="XML файли"/>
                    <ComboBoxItem Content="XSL файли"/>
                    <ComboBoxItem Content="HTML файли"/>
                </ComboBox>

                <TextBlock Text="Пошук:" VerticalAlignment="Center" Margin="20,5,5,5" FontWeight="Bold"/>
                <TextBox x:Name="SearchTextBox" Width="200" TextChanged="SearchText_Changed"/>

                <Button Content="🔄 Оновити" Click="Refresh_Click" Style="{StaticResource PrimaryButton}"/>
            </StackPanel>
        </GroupBox>

        <!-- Список файлів -->
        <Border Grid.Row="2" Background="White" CornerRadius="10" Padding="10">
            <DataGrid x:Name="FilesDataGrid" 
                     AutoGenerateColumns="False"
                     IsReadOnly="True"
                     SelectionMode="Single"
                     CanUserAddRows="False"
                     CanUserDeleteRows="False"
                     GridLinesVisibility="None"
                     HeadersVisibility="Column"
                     AlternatingRowBackground="#f7fafc"
                     MouseDoubleClick="FilesDataGrid_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="📄 Назва файлу" Binding="{Binding Name}" Width="*" FontWeight="Bold"/>
                    <DataGridTextColumn Header="📦 Тип" Binding="{Binding FileType}" Width="100"/>
                    <DataGridTextColumn Header="📅 Дата змін" Binding="{Binding ModifiedTime, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}" Width="150"/>
                    <DataGridTextColumn Header="💾 Розмір" Binding="{Binding SizeFormatted}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <TextBlock x:Name="StatusTextBlock" 
                      Text="Виберіть файл зі списку" 
                      VerticalAlignment="Center"
                      Margin="0,0,20,0"
                      Foreground="Gray"/>
            <Button Content="✅ Вибрати" Click="Select_Click" Style="{StaticResource PrimaryButton}" Width="120"/>
            <Button Content="❌ Скасувати" Click="Cancel_Click" Style="{StaticResource PrimaryButton}" Width="120" Background="#f56565"/>
        </StackPanel>
    </Grid>
</Window>